@{
    ViewData["Title"] = "Home Page";
}

@model BookListViewModel


<div class="jumbotron" style="background-image: url(https://encrypted-tbn0.gstatic.com/images?q=tbn:ANd9GcTuX3OuBVgfAlesgZgYUW9mVIf-Ut_eIWl9ew&usqp=CAU)">
    <br /><br />
</div>

<div class="container">
    <div class="row m-1 p-1 justify-content-evenly">
        @foreach (var x in Model.Books)
        {
            <!-- This is a partial view.
                Book Summary is the cshtml page we
                created to make it look a little better-->
            <partial name="BookSummary" model="x" />

        }
    </div>
</div>

<div page-model="@Model.PagingInfo" page-action="Index" page-classes-enabled="true" page-class="btn"
     page-class-normal="btn-outline-light"
     page-class-selected="btn-light" page-url-category="@Model.CurrentCategory"
     class="pager">
    <!--  btn-group pull-right m-1-->

</div>


