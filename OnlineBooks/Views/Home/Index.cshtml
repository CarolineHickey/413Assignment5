@{
    ViewData["Title"] = "Home Page";
}

@model BookListViewModel

<div class="text-center">
    <h1 class="display-4">Online Book Store</h1>
</div>
<div class="container" >
    <div class="row m-1 p-1 justify-content-evenly">
        @foreach (var x in Model.Books)
        {
            <div class="col-sm-4 card">
                <div class="text-center card-body bg-faded">
                    <h4 class="text-primary card-title">Title: @x.Title</h4>
                    <p class="text-secondary card-text">Author: @x.FirstName</p>
                    <p class="text-secondary card-text">Author: @x.LastName</p>
                    <p class="text-secondary card-text">Publisher: @x.Publisher</p>
                    <p class="text-secondary card-text">ISBN: @x.ISBN</p>
                    <p class="text-secondary card-text">Category: @x.Category</p>
                    <p class="text-secondary card-text">Category: @x.Genre</p>
                    <p class="text-secondary card-text">Number of Pages: @x.Pages</p>
                    <span class="badge badge-pill badge-faded">
                        <big> <p class="text-secondary card-text">Price: @x.Price</p></big>
                    </span>
                </div>
            </div>

        }
    </div>
</div>

<div page-model="@Model.PagingInfo" page-action="Index" page-classes-enabled="true" page-class="btn"
     page-class-normal ="btn-outline-primary" page-class-selected="btn-primary" class="btn-group pull-right m-1">

</div>
